<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="100" styleClass="root" vgap="20" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="fr.amu.iut.exercice8.LoginControl">
    <Text id="welcome-text" text="Welcome" wrappingWidth="112.2265625" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <font>
         <Font size="24.0" />
      </font></Text>

    <Label text="User Id:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
<!--   à compléter par un TextField et un Label -->

    <TextField fx:id="u id" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <PasswordField fx:id="pwd" GridPane.columnIndex="1" GridPane.rowIndex="2" />

<!--  à compléter pour les boutons -->
    <Button text="OK" onAction="#okClicked" GridPane.columnIndex="1" GridPane.rowIndex="3" />
